---
interface Props {
  date: string;
  title: string;
  description: string;
  link?: string;
  location: string;
  active?: boolean;
}

const { date, description, title, link, location, active } = Astro.props;

const classPill = active ? "bg-green-500 dark:bg-green-500" : "bg-gray-200";
---

<li class="mb-10 ms-4 flex flex-col md:flex-row gap-y-6 md:gap-y-0">
  <div
    class=` ${classPill} absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 border dark:border-none border-white dark:border-gray-900 dark:bg-gray-700`
  >
  </div>
  <div class="w-full md:w-1/3">
    <h3 class="text-2xl font-semibold text-blue-500/80 dark:text-blue-400">
      {title}
    </h3>
    <h2 class="text-xl font-semibold text-gray-500 dark:text-slate-200">
      {location}
    </h2>
    <time
      class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-slate-100"
      >{date}</time
    >
  </div>

  <div class="w-full md:w-2/3">
    <p
      class="mb-4 text-base font-normal text-gray-500 text-pretty dark:text-slate-300"
    >
      {description}
    </p>
  </div>

  {
    link && (
      <a
        href={link}
        class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-100 focus:text-blue-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-gray-700"
      >
        Saber m√°s...{" "}
        <svg
          class="w-3 h-3 ms-2 rtl:rotate-180"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 14 10"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 5h12m0 0L9 1m4 4L9 9"
          />
        </svg>
      </a>
    )
  }
</li>
